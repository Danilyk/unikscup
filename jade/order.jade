extends ./layout.jade  
block content     
  .row.center-xs
    h1 Оформление заказа
  .row.order-start
    .col-xs
      .order-list
        .order-progress-bar.row.between-xs
          .col-xs.left.step-1.active
            .order-progress-circle.center-xs  
              p.step-description Заказчик
          .col-xs.middle.step-2    
            .order-progress-circle.center-xs
              p.step-description Доставка
          .col-xs.right.step-3    
            .order-progress-circle.center-xs
              p.step-description Заказ

        form
          .form-step.step-1.active
            h3 Компания
            .form-control
              p Название компании
              input(required=true type="text" placeholder="Полное юридическое название компании" id="company_name")  
            h3 Контакты
            .form-control
              p ФИО контакного лица    
              input(required=true type="text" placeholder="Фамилия, имя и отчество представителя компании" id="name") 
            .form-control
              p Электронная почта    
              input(type="text" placeholder="Мы пришлем счет на оплату на этот адрес" id="email") 
            .form-control
              p Телефон    
              input(type="text" placeholder="Мы позвоним для уточнения деталей и согласования доставки" id="phone")   
            .row.end-xs
              .col-xs
                a.button-checkout.next-step-button(href="#" data-type="next" data-step="step-1") Далее
          .form-step.step-2
            h3 Способ доставки
            .row
              div
                .form-control.row
                  .col-xs.radio
                    input(id="pickup" type="radio" name="delivery" value="pickup")
                    label(for="pickup")
                  .col-xs
                    p Самовывоз
                    span со склада в г.Новосибирске
              div
                .form-control.row
                  .col-xs.radio
                    input(id="courier" type="radio" name="delivery" value="pickup")    
                    label(for="courier")
                  .col-xs
                    p Доставка по Новосибирску
                    span Курьерская
              div
                .form-control.row
                  .col-xs.radio
                    input(id="terminal" type="radio" name="delivery" value="pickup")
                    label(for="terminal")
                  .col-xs
                    p Доставка до терминала ТК                        
            h3 Адрес доставки
            .form-control 
              p Город
              input(type="text" placeholder="Новосибирск")
            .form-control 
              p Улица
              input(type="text" placeholder="Инженерная")
            .row
              .col-xs
                .form-control 
                  p Дом
                  input(type="text" placeholder="10")
              .col-xs
                .form-control 
                  p Корпус
                  input(type="text" placeholder="10")
              .col-xs
                .form-control 
                  p Строение
                  input(type="text" placeholder="10")
              .col-xs
                .form-control 
                  p Офис
                  input(type="text" placeholder="10") 
            .form-control 
              p Примечания
              textarea(type="text" placeholder="Кого спросить на вахте, есть ли шлагбаум на въезде на территорию и так далее...") 
            .row.middle-xs      
              .col-xs
                a.grey-button.prev-step-button(href="#" data-type="prev" data-step="step-2") Назад
              .col-xs.end-xs
                a.button-checkout.next-step-button(href="#" data-type="next" data-step="step-2") Далее
          .form-step.step-3
            h3 Реквизиты компании
            
            .form-control
              p Для экономии времени, вы можете ввести реквизиты вашей компании сейчас и мы сразу же выставим счет.
            
            .row
              div
                .form-control.row
                  .col-xs.radio
                    input(id="now" type="radio" name="requisites" value="now")
                    label(for="now")
                  .col-xs
                    p Потом
                    span Также вы можете отправить реквизиты по электронной почте
              div
                .form-control.row
                  .col-xs.radio
                    input(id="later" type="radio" name="requisites" value="later")    
                    label(for="later")
                  .col-xs
                    p Сейчас
                    span Открыть форму заполнения
                    
            .row                 
              .form-control.col-xs
                p ИНН
                input(type="text" placeholder="5407249745")
              .form-control.col-xs
                p КПП
                input(type="text" placeholder="540701001")  
              .form-control.col-xs
                p ОГРН
                input(type="text" placeholder="1155476099888")       
            .form-control
              p Юридический адрес
              input(type="text" placeholder="630090 г. Новосибирск, ул. Николаева, 12") 
            .form-control
              p Фактический адрес
              input(type="text" placeholder="630090 г. Новосибирск, ул. Николаева, 12")          
            .row                 
